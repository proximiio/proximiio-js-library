{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": false,
    "outDir": "./lib",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["ES2016", "ES2017", "ES2018", "DOM", "ES2019"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
